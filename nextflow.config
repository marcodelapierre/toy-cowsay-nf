manifest {
  author = 'Marco De La Pierre'
  name = 'toy-cowsay-nf'
  description = 'Toy pipeline for simple Nextflow tests'
  homePage = 'https://github.com/marcodelapierre/toy-cowsay-nf'

  nextflowVersion = '!>=22.04.0'
}

profiles {

singularity {
  process.container = 'quay.io/marcodelapierre/cowsay:2022.12'
  process.singularity = enabled
}

docker {
  process.container = 'quay.io/marcodelapierre/cowsay:2022.12'
  process.docker = enabled
}

podman {
  process.container = 'quay.io/marcodelapierre/cowsay:2022.12'
  process.podman = enabled
}


}
